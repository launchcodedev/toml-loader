{
  "name": "@lcdev/toml-loader",
  "description": "Webpack plugin for loading toml files",
  "version": "1.0.4",
  "license": "MPL-2.0",
  "main": "dist/index.js",
  "module": "dist/es/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist",
    "!*.tsbuildinfo"
  ],
  "author": {
    "name": "Launchcode",
    "email": "admin@lc.dev",
    "url": "https://lc.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/servall/toml-loader.git"
  },
  "scripts": {
    "build": "tsc -b",
    "build:es": "tsc -b tsconfig.es.json",
    "clean": "rm -rf dist *.tsbuildinfo",
    "lint": "eslint --ext .ts,.tsx src",
    "fix": "eslint --ext .ts,.tsx src --fix",
    "test": "jest",
    "prepublishOnly": "yarn clean && yarn build && yarn build:es"
  },
  "dependencies": {
    "@iarna/toml": "2",
    "is-keyword-js": "1",
    "loader-utils": "1"
  },
  "peerDependencies": {
    "webpack": "4"
  },
  "devDependencies": {
    "@commitlint/cli": "8",
    "@lcdev/commitlint": "1",
    "@lcdev/eslint-config": "0.2",
    "@lcdev/jest": "0.1",
    "@lcdev/prettier": "0.1",
    "@lcdev/tsconfig": "0.1",
    "@types/jest": "24",
    "@types/loader-utils": "1",
    "@types/memory-fs": "0.3",
    "@types/node": "8",
    "@types/webpack": "4",
    "eslint": "6",
    "husky": "3",
    "jest": "24",
    "prettier": "1",
    "memory-fs": "0.4",
    "typescript": "3",
    "webpack": "4"
  },
  "prettier": "@lcdev/prettier",
  "eslintConfig": {
    "extends": "@lcdev",
    "parserOptions": {
      "project": "./tsconfig.eslint.json"
    }
  },
  "jest": {
    "preset": "@lcdev/jest"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@lcdev/commitlint"
    ]
  }
}
